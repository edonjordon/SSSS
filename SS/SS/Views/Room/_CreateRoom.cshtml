@model SS.Models.Room

@{
    ViewBag.Title = "_CreateRoom";
}

<div class="modal-body">
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <div class="editor-field">
            &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<strong>Building:</strong> @Html.EditorFor(model => model.Building)
            @Html.ValidationMessageFor(model => model.Building)
        </div>
        <div class="editor-field">
            &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<strong>Room Number:</strong> @Html.EditorFor(model => model.RoomNumber)
            @Html.ValidationMessageFor(model => model.RoomNumber)
        </div>
        <div class="editor-label">
            &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<strong>Capacity:</strong> @Html.EditorFor(model => model.Capacity)
            @Html.ValidationMessageFor(model => model.Capacity)
        </div>
        <div class="editor-field">
             &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<strong>Has Speakers:</strong> <div class="make-switch" data-on-label="YES" data-off-label="NO">
                <input data-val="true" id="HasSpeakers" name="HasSpeakers" data-val-required="The HasSpeakers field is required." type="checkbox" value="true" checked>
            </div>
            @Html.ValidationMessageFor(model => model.HasSpeakers)  
        </div>
        <div class="editor-field">
            &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<strong>Has Projector:</strong> <div class="make-switch" data-on-label="YES" data-off-label="NO">
                <input data-val="true" id="HasProjector" name="HasProjector" data-val-required="The HasSpeakers field is required." type="checkbox" value="true" checked>
            </div>
            @Html.ValidationMessageFor(model => model.HasProjector)
        </div>
        <div class="editor-field">
            &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<strong>Has Computers:</strong> <div class="make-switch" data-on-label="YES" data-off-label="NO">
                <input data-val="true" id="HasComputers" name="HasComputers" data-val-required="The HasSpeakers field is required." type="checkbox" value="true" checked>
            </div>
            @Html.ValidationMessageFor(model => model.HasComputers)
        </div>
        <hr />
        <p align="center">
            <input type="submit" class="btn btn-primary" value="Create"/>
        </p>
    </fieldset>
}
</div>

@Scripts.Render("~/bundles/jquery")
@Styles.Render("~/Content/bootstrapcss")
@Scripts.Render("~/bundles/jqueryNew")
@Scripts.Render("~/bundles/bootstrapjs")