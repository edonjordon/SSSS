@model SS.ViewModels.CourseViewModel

@{
    ViewBag.Title = "Create a Course";
}

<h2>Create a Course</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Course</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Department)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Department)
            @Html.ValidationMessageFor(model => model.Department)
        </div>  

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Subject)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Subject)
            @Html.ValidationMessageFor(model => model.Subject)
        </div>


    </fieldset>
    <fieldset>
        <legend>Rules for the Course</legend>

         <div class="editor-label">
            @Html.LabelFor(model => model.SeasonOffered)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SeasonOffered)
            @Html.ValidationMessageFor(model => model.SeasonOffered)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.RoomCapacity)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.RoomCapacity)
            @Html.ValidationMessageFor(model => model.RoomCapacity)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.NeedsSpeakers)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NeedsSpeakers)
            @Html.ValidationMessageFor(model => model.NeedsSpeakers)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.NeedsProjector)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NeedsProjector)
            @Html.ValidationMessageFor(model => model.NeedsProjector)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.NeedsComputers)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NeedsComputers)
            @Html.ValidationMessageFor(model => model.NeedsComputers)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.RoomId, "RoomTaughtIn")
        </div>
        <div class="editor-field">
            @Html.DropDownList("RoomId", String.Empty)
            @Html.ValidationMessageFor(model => model.RoomId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.InstructorId, "MustBeTaughtBy")
        </div>
        <div class="editor-field">
            @Html.DropDownList("InstructorId", String.Empty)
            @Html.ValidationMessageFor(model => model.InstructorId)
        </div>
    </fieldset>
    <p>
        <input type="submit" value="CreateACourse" />
    </p>
    
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
