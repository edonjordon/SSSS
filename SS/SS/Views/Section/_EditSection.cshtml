        @if (Model.Friday.Equals(true))
        {
            <div class="editor-field" style="padding-left:19.5%">
                <strong>Friday:</strong> <div class="make-switch switch-mini" data-on-label="YES" data-off-label="NO">
                    <input data-val="true" id="Friday" name="Friday" data-val-required="The NeedSpeakers field is required." type="checkbox" value="true" checked>
                </div>
