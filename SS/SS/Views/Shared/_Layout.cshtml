<!DOCTYPE html>
<html lang="en">
<head>
    @Scripts.Render("~/bundles/jquery")
    @*<script type="text/javascript" src="~/Scripts/chosen.jquery.js"></script>
    <link rel="stylesheet" href="~/Content/chosen.css" />*@

    <meta charset="utf-8">
    <title>SSSS</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Le styles -->
    <style>
        body {
            padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
        }
    </style>

    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="../assets/js/html5shiv.js"></script>
    <![endif]-->

    <!-- Fav and touch icons -->
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="../assets/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="../assets/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="../assets/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="../assets/ico/apple-touch-icon-57-precomposed.png">
    <link rel="shortcut icon" href="../assets/ico/favicon.png">
    @Styles.Render("~/Content/bootstrapcss")
    <!-- datatable search, pagination, and stuff -->
    <link rel="stylesheet" type="text/css" href="~/Content/jquery.dataTables.css">

    <link rel="stylesheet" type="text/css" href="~/Content/myCSS.css">
</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="brand" href="/Home">SSSS</a>
                <div id="cssmenu" class="nav-collapse collapse">
                    <ul id="homeTab" class="nav">
                        @if (Request.IsAuthenticated) {
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Scheduler", "ViewSchedule", "Semester")</li>
                        }
                        @if (Request.IsAuthenticated) {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" name="manage">Manage<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                @if (User.IsInRole("Admin"))
                                {
                                <li>@Html.ActionLink("Instructors", "Index", "Instructor")</li>
                                <li>@Html.ActionLink("Courses", "Index","Course")</li>
                                @*<li>@Html.ActionLink("Rules", "Index","Rule")</li>*@
                                <li>@Html.ActionLink("Rooms", "Index", "Room")</li>
                                <li>@Html.ActionLink("Sections", "Index", "Section")</li>
                                <li>@Html.ActionLink("Semesters", "Index", "Semester")</li>
                                <li>@Html.ActionLink("Users", "Index", "User")</li>
                                }
                                else 
                                {
                                <li>@Html.ActionLink("Instructors", "Index", "Instructor")</li>
                                <li>@Html.ActionLink("Courses", "Index","Course")</li>
                                <li>@Html.ActionLink("Rules", "Index","Rule")</li>
                                <li>@Html.ActionLink("Rooms", "Index", "Room")</li>
                                <li>@Html.ActionLink("Sections", "Index", "Section")</li>
                                <li>@Html.ActionLink("Semesters", "Index", "Semester")</li>              
                                }
                            </ul>
                        </li>
                        }
                        @if (Request.IsAuthenticated) {
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact Us", "Contact", "Home")</li>
                        }
                    </ul>
                    <div class="pull-right">
                        <a> 
                            @Html.Partial("_LoginPartial")
                        </a>
                    </div>
                </div>
                <!--/.nav-collapse -->
            </div>
        </div>
    </div>
    <div style ="padding-bottom:20%; padding-left:2%; padding-right:2%; padding-top:.3%;">
        @RenderBody()
    </div>
    <!-- /container -->

    <!-- le javascript
            =======================
            - When using the tinymce.mvc.jquery-package with MVC4, make sure that you moved "@Scripts.Render("~/bundles/jquery")" into the head section.
            placed at the end of the document so the pages load faster -->

    
    

    <!--Make sure that you call this jquery bundle first, if you do not the datatables will not render. -->
    @Scripts.Render("~/bundles/jqueryNew")
    <!-- -->
    <script src="~/Scripts/jquery.dataTables.js"> </script>

    @Scripts.Render("~/bundles/bootstrapjs")
    
    <script src="~/Scripts/myjQuery.js"> </script>
    @*<script src="~/Scripts/bootstrap.min.js"> </script>*@
   
    @RenderSection("scripts", required: false)


</body>
</html>