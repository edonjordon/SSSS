        }
        @if (Model.Friday.Equals(false))
        {
            <div class="editor-field" style="padding-left:19.5%">
                <strong>Friday:</strong> <div class="make-switch switch-mini" data-on-label="YES" data-off-label="NO">
                    <input data-val="true" id="Friday" name="Friday" data-val-required="The NeedSpeakers field is required." type="checkbox" value="true">
                </div>
                @Html.ValidationMessageFor(model => model.Friday)
            </div>
        }
        <hr />
        <p align="center">
            <input type="submit" class="btn btn-primary" value="Save" />
        </p>
    </fieldset>
}
</div>
